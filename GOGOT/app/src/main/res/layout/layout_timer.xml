<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_timer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <Chronometer
        android:id="@+id/player_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_player_timer"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        app:layout_constraintHorizontal_bias="0.5"
        android:background="@drawable/buttons_background"
        app:autoSizeMinTextSize="1sp"
        app:autoSizeMaxTextSize="200sp"
        app:autoSizeTextType="uniform"
        style="@style/TextViewPrimaryCell"
        />

    <TextView
        android:id="@+id/text_player_timer"
        style="@style/TextViewSettingsSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/player_timer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"/>

</androidx.constraintlayout.widget.ConstraintLayout>